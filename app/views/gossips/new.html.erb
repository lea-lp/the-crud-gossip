<%= form_for @new_gossip do |gossip| -%>

    <div class="form-group">
      <%= gossip.label "Pseudo" %>
      <%= gossip.text_field :anonymous_gossiper, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= gossip.label "Title" %>
      <%= gossip.text_field :title, class: "form-control" %>
