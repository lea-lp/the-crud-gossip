<h3>Sign Up</h3>


<%= form_for @user do |user| -%>

    <div class="form-group">
      <%= user.label "Username" %>
      <%= user.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= user.label "Email" %>
      <%= user.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= user.label "Password" %>
      <%= user.text_field :password, class: "form-control" %>
    </div>

    <%= user.submit class: "btn btn-primary" %>

  <% end -%>

</form>

